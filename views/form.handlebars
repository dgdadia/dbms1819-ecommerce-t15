<style>
.container{
  background-color: pink;
  margin-top: 100px;
}
</style>

<div class="container">
  <h2>CUSTOMER ORDER FORM</h2>
  <form action="{{this.id}}/send" method="POST">
    <h5> All information written will considered as true</h5>
    <div class="form-group">
              <label class="control-label lbl-text" for="first_name">First Name</label>
              <div>
                <input id="first_name" name="first_name" type="text" placeholder="Enter First Name" class="form-control" required="">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label lbl-text" for="middle_name">Middle Name</label>
              <div>
                <input id="middle_name" name="middle_name" type="text" placeholder="Enter Middle Name" class="form-control" required="">
              </div>
            </div>            
            <div class="form-group">
              <label class="control-label lbl-text" for="last_name">Last Name</label>
              <div>
                <input id="last_name" name="last_name" type="text" value="" class="form-control" placeholder="Enter Last Name" required="">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label lbl-text" for="email">Email</label>
              <div>
                <input id="email" name="email" type="email" placeholder="Enter Email" class="form-control" required="">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label lbl-text" for="state">State</label>
              <div>
                <input id="state" name="state" type="text" placeholder="Enter State" class="form-control" required="">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label lbl-text" for="city">City</label>
              <div>
                <input id="city" name="city" type="text" placeholder="Enter City" class="form-control" required="">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label lbl-text" for="street">Street</label>
              <div>
                <input id="street" name="street" type="text" placeholder="Enter Street" class="form-control" required="">
              </div>
            </div>
            <div class="form-group">
              <label class="control-label lbl-text" for="zipcode">Zipcode</label>
              <div>
                <input id="zipcode" name="zipcode" type="text" placeholder="Enter Zipcode" class="form-control" required="">
              </div>
            </div>
            <div class="form-group">
              <label for="productid">Product Name:</label>
                 <input type="text" class="form-control" value="{{this.name}}" id="id" name="productid" readonly="" required="">
              </div>
           <div class="form-group">
           <label for="quantity">Quantity:</label>
            <input type="number" class="form-control" id="quantity" placeholder="1" name="pswd" required="">
              </div>
           <div class="form-group">
            <input type="submit" class="btn btn-lg btn-danger" name="submit" value="Submit">
           </form>
           </div>